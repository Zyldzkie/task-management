@model IEnumerable<TaskManagement.Models.TaskAssignment>

@{
    ViewData["Title"] = "Task Assignments";
}

<h2>Task Assignments</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Task.TaskName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssignedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Task.TaskName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AssignedDate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AssignmentID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.AssignmentID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.AssignmentID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create">Create New</a>
