@model TaskManagement.Models.LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutLogin";
}

<div class="login-container">
    <div class="col-md-4">
        <section>
            <form method="post" asp-controller="Login" asp-action="Login" class="login-form">
                <h2 class="text-center mb-4">Use a local account to log in</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating mb-3">
                    <input asp-for="UserName" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="UserName" class="form-label"></label>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Password" class="form-label"></label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
            </form>
            <div class="mt-3">
                <a asp-controller="Register" asp-action="Index">Register</a>
            </div>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}